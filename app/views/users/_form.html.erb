<%= form_for @user do |f| %>
<%= render 'errors' %>
  <div class="form-group">
		<h4><%= f.label :email %></h4>
		<%= f.text_field :email, class: "form-control-lg" %>
	</div>
	<div class="form-group">
		<h4><%= f.label :password %></h4>
		<%= f.password_field :password, class: "form-control-lg" %>
	</div>
	<div class="form-group">
		<h4><%= f.label :password_confirmation %></h4>
		<%= f.password_field :password_confirmation, class: "form-control-lg" %>
	</div>
	<%= f.submit "Submit", class: "btn-primary btn-lg" %>
<% end %>